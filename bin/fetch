#!/usr/bin/env bash

UPTIME=$(upt)
PACKAGES=$(ls /usr/local/Cellar/ | wc -l | grep -Eo "\d+");
BATTERY=$(pmset -g batt | grep -Eo "\d+%" );
SYSTEM=$(system_profiler SPSoftwareDataType | grep "System Version")
OS=$(echo "$SYSTEM" | awk '{print $3}')
OSVER=$(echo "$SYSTEM" | awk '{print $4}')
SH=$($SHELL --version | sed -e 's/, version//')

echo ''
echo $USER @ $HOSTNAME
echo ''
echo 'Shell:          '$SH
echo 'OS:             '$OS
echo 'OS Version:     '$OSVER
echo 'Terminal:       '$TERM_PROGRAM
echo 'Packages:       '$PACKAGES
echo ''
echo 'Battery:        '$BATTERY
echo 'Uptime:         '$UPTIME
echo 'Date:           '$(date +%F)
echo ''
colors