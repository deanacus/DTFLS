#!/bin/sh

fg="\033[3"
bg="\033[4"

print_bold() {
  printf "\033[1m$1"
}

print_underline() {
  printf "\033[4m$1"
}

print_reverse() {
  printf "\033[7m$1"
}

print_black() {
 printf "\033[30m$1\033[0m"
}

print_red() {
 printf "\033[31m$1\033[0m"
}

print_green() {
 printf "\033[32m$1\033[0m"
}

print_yellow() {
 printf "\033[33m$1\033[0m"
}

print_blue() {
 printf "\033[34m$1\033[0m"
}

print_magenta() {
 printf "\033[35m$1\033[0m"
}

print_cyan() {
 printf "\033[36m$1\033[0m"
}

print_white() {
 printf "\033[37m$1\033[0m"
}

