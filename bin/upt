#!/usr/bin/env bash

NOW=$(date +'%s')
BOOT=$(sysctl -n kern.boottime | grep -Eo "\d+" | head -1)
UPTIME=$((NOW - BOOT))
WEEK=604800
DAY=86400
HOUR=3600
MIN=60;

WEEKS=$((UPTIME / WEEK))
DAYS=$(((UPTIME / DAY) % 7))
HOURS=$(((UPTIME / HOUR) % 24))
MINS=$(((UPTIME / MIN) % 60))
SECONDS=$((UPTIME % MIN))

echo $WEEKS'w '$DAYS'd '$HOURS'h '$MINS'm '$SECONDS's'

