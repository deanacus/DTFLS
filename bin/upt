#!/usr/bin/env bash

uptime() {
  pad() {
    printf %0$2d $1
  }

  NOW=$(date +'%s')
  BOOT=$(sysctl -n kern.boottime | grep -Eo "\d+" | head -1)
  UPTIME=$((NOW - BOOT))
  DAY=86400
  HOUR=3600
  MIN=60;

  DAYS=$((UPTIME / DAY))
  HOURS=$(pad $((UPTIME / HOUR % 24)) 2)
  MINS=$(pad $((UPTIME / MIN % 60)) 2)

  printf $DAYS'd '$HOURS'h '$MINS'm'
}

