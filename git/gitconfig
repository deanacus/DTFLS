[user]
	name = Dean Harris
	email = dean.harris@comparethemarket.com.au

[alias]
	co = checkout
	cp = cherry-pick
	ci = commit
	st = status
	br = branch
    lg = "log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'"
    df = difftool
	merge = merge --no-ff
	switch = checkout
	new-branch = checkout -b
	branch-log = log master..
	bl = log master..
	get-latest = checkout master && git fetch -p
	discard = reset --hard
    day = shortlog --all --since=1.days --author="Dean" --no-merges
	week = shortlog --all --since=7.days --author="Dean" --no-merges
	fortnight = shortlog --all --since=14.days --author="Dean" --no-merges
	month = shortlog --all --since=30.days --author="Dean" --no-merges
    unstage = reset

[core]
	whitespace=fix,cr-at-eol
	editor = vim
	excludesfile = ~/dotfiles/git/gitignore

[color]
		ui = auto
	[color "branch"]
		current = yellow reverse
		local = yellow
		remote = green
		default = green reverse
	[color "diff"]
		meta = 227
		frag = magenta bold
		commit = 227 bold
		old = red bold
		new = green bold
		whitespace = red reverse
	[color "status"]
		added = yellow
		changed = green
		untracked = cyan
	[color "diff-highlight"]
		oldNormal = red bold
		oldHighlight = red bold 52
		newNormal = green bold
		newHighlight = green bold 22

[diff]
    tool = vimdiff

[difftool]
	prompt = false

