[user]
  name = Dean Harris
  email = dean@harris.tc

[github]
  user = deanacus
  email = dean@harris.tc

[init]
	defaultBranch = main

[alias]
  switch = checkout
  branch-log = log master..
  discard = reset --hard
  day = shortlog --all --since=1.days --author="Dean" --no-merges
  unstage = reset
  st = status --short
  standup = log --author=\"Dean Harris\" --pretty=oneline --since yesterday --abbrev-commit
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:short)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:lstrip=3)\" --no-merged=master  refs/remotes

[core]
  editor = nvim
  excludesfile = ~/dotfiles/git/gitignore
	pager = bat

[color]
  ui = auto

[color "branch"]
  current = green
  local = yellow
  remote = blue
  default = blue reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[branch]
  autosetuprebase = always

[diff]
  algorithm = patience
  colorMoved = zebra
  tool = vscode

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[fetch]
  prune = true

[help]
  autocorrect = 1

[merge]
  tool = vscode

[mergetool "vscode"]
    cmd = code --wait $MERGED

[pull]
  rebase = true

[push]
  default = tracking
  followTags = true

[rebase]
  autoStash = true
  autosquash = true

[url "git://github"]
  insteadOf = https://github

[url "git@github.com:"]
  insteadOf = https://github.com/

[includeIf "gitdir:~/dev/rpt/"]
  path = ~/dotfiles/git/gitconfig.work