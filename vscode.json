// Place your settings in this file to overwrite the default settings
{
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  // Terminal
  "terminal.integrated.shell.osx": "/bin/bash",
  "terminal.integrated.shellArgs.osx": [
    "-l"
  ],
  "terminal.external.osxExec": "Hyper.app",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "window.restoreWindows": "none",
  "window.title": "${dirty}${activeEditorShort}${separator}${folderName}",
  // Editor
  "editor.tabSize": 4,
  "editor.formatOnPaste": false,
  "editor.matchBrackets": true,
  "editor.wordWrap": "on",
  "editor.autoIndent": true,
  "editor.wrappingIndent": "indent",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.fontFamily": "'Alma Mono','Apple Color Emoji', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.scrollBeyondLastLine": true,
  "editor.minimap.showSlider": "always",
  "editor.insertSpaces": false,
  // Files
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.html": "html",
    "*.scss": "scss",
    "*.moon": "vue"
  },
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.options": {
    "configFile": "/Users/deanacus/.eslintrc"
  },
  "php.executablePath": "/Applications/AMPPS/php-7.1/bin/php",
  "sasslint.configFile": "Users/deanacus/.sass-lint.yml",
  "auto-close-tag.SublimeText3Mode": true,
  "[markdown]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false
  },
  "git.confirmSync": false,
  "workbench.activityBar.visible": true,
  "gitlens.gitExplorer.view": "repository",
  "gitlens.gitExplorer.files.layout": "list",
  "gitlens.explorers.avatars": false,
  "workbench.statusBar.feedback.visible": false,
  "eslint.packageManager": "yarn",
  "window.zoomLevel": 0,
  "workbench.editor.tabSizing": "shrink",
  "sasslint.packageManager": "yarn",
  "workbench.colorTheme": "Codecourse Contrast (rainglow)"
}