// Place your settings in this file to overwrite the default settings
{
  // Work Bench
  "workbench.colorTheme": "Overflow (rainglow)",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  // Terminal
  "terminal.integrated.shell.osx": "/bin/bash",
  "terminal.integrated.shellArgs.osx": [
    "-l"
  ],
  "terminal.external.osxExec": "Hyper.app",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "window.restoreWindows": "none",
  "window.title": "${dirty}${activeEditorShort}${separator}${folderName}",
  // Editor
  "editor.tabSize": 4,
  "editor.formatOnPaste": false,
  "editor.matchBrackets": true,
  "editor.wordWrap": "on",
  "editor.autoIndent": true,
  "editor.wrappingIndent": "indent",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.fontFamily": "'iA Writer Duotone','Alma Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.scrollBeyondLastLine": true,
  "editor.minimap.showSlider": "always",
  "editor.insertSpaces": false,
  // Files
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.html": "html"
  },
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.options": {
    "configFile": "/Users/dharris/.eslintrc"
  },
  "php.executablePath": "/Applications/AMPPS/php-7.1/bin/php",
  "sasslint.configFile": "Users/dharris/.sass-lint.yml",
  "auto-close-tag.SublimeText3Mode": true,
  "[markdown]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false
  },
  "git.confirmSync": false
}