{
  // Work Bench
  "breadcrumbs.enabled": true,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Halcyon",
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "field-lights-monochrome",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,

  // Terminal shit
  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.shellArgs.osx": ["-l"],

  // Stop MS Spying
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  // Window settings
  "window.restoreWindows": "none",
  "window.title": "${dirty}${activeEditorShort}${separator}${folderName}",
  "window.zoomLevel": 0,

  // Editor settings
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.autoIndent": "full",
  "editor.fontFamily": "'Operator Mono', 'Dank Mono', Consolas, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": false,
  "editor.insertSpaces": true,
  "editor.lightbulb.enabled": false,
  "editor.lineHeight": 21,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.scrollBeyondLastLine": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.wrappingIndent": "indent",
  "diffEditor.renderSideBySide": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // File specific stuff
  "files.associations": {
    "*.html": "html",
    "*.fish": "shellscript"
  },
  "files.trimTrailingWhitespace": true,

  // Extensions
  "extensions.ignoreRecommendations": true,

  // ESLint
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onType",

  // Langauge Specific styles
  "[markdown]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off"
  },
  "[mdx]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off"
  },
  "[php]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false
  },
  "[git-commit]": {
    "editor.acceptSuggestionOnEnter": "off"
  },
  "[javascript, javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "updateImportsOnFileMove.enabled": "always"
  },
  "[typescript, typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "updateImportsOnFileMove.enabled": "always"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.untrackedChanges": "separate",
  "importCost.javascriptExtensions": ["\\.jsx?$", "\\.mdx?$"],
  "prettier.trailingComma": "all",
  "prettier.singleQuote": true,
  "prettier.proseWrap": "always",
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "ejs",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "mdx"
  ],
  "auto-rename-tag.activationOnLanguage": [
    "xml",
    "php",
    "ejs",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "mdx"
  ],
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "files.eol": "\n",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.wordBasedSuggestions": false,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "emmet.excludeLanguages": ["typescript", "typescriptreact", "markdown"],
  "html.format.indentInnerHtml": true,
  "html.format.wrapAttributes": "aligned-multiple",
  "eslint.format.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "C_Cpp.clang_format_sortIncludes": true,
  "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 2, TabWidth: 2, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 0, AccessModifierOffset: -4, NamespaceIndentation: All, FixNamespaceComments: false }"
}
