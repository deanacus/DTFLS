
{
    // Work Bench
    "breadcrumbs.enabled": true,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Material Theme",
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.statusBar.feedback.visible": false,

    // Terminal shit
    "terminal.external.osxExec": "Hyper.app",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shellArgs.osx": [
      "-l"
    ],

    // Stop MS Spying
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Window settings
    "window.restoreWindows": "none",
    "window.title": "${dirty}${activeEditorShort}${separator}${folderName}",
    "window.zoomLevel": 0,


    // Editor settings
    "editor.autoIndent": true,
    "explorer.confirmDragAndDrop": false,
    "editor.fontFamily": "'Operator Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": false,
    "editor.insertSpaces": true,
    "editor.lightbulb.enabled": false,
    "editor.lineHeight": 21,
    "editor.matchBrackets": true,
    "editor.minimap.showSlider": "always",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80],
    "editor.scrollBeyondLastLine": true,
    "editor.tabSize": 4,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.wrappingIndent": "indent",

    // File specific stuff
    "files.associations": {
      "*.html": "html",
      "*.scss": "scss",
      "*.moon": "vue"
    },
    "files.trimTrailingWhitespace": true,


    // Extensions
    "extensions.showRecommendationsOnlyOnDemand": true,

    // ESLint
    "eslint.alwaysShowStatus": true,
    "eslint.autoFixOnSave": true,
    "eslint.enable": true,
    "eslint.run": "onType",
    "eslint.packageManager": "yarn",

    // PHP Stuff
    "php.executablePath": "/Applications/AMPPS/php-7.1/bin/php",

    // SASS-Lint
    "sasslint.configFile": "Users/deanacus/.sass-lint.yml",
    "sasslint.packageManager": "yarn",

    // GitLens
    "gitlens.codeLens.enabled": false,

    // Langauge Specific styles
    "[markdown]": {
      "editor.trimAutoWhitespace": false,
      "files.trimTrailingWhitespace": false
    },
    "[php]": {
      "editor.trimAutoWhitespace": false,
      "files.trimTrailingWhitespace": false
    },
    "[git-commit]": {
      "editor.acceptSuggestionOnEnter": "off"
    },

    // Peacock
    "peacock.affectedElements": [
      "activityBar",
      "titleBar"
    ]
  }