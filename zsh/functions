function logdate() {
	if [ -z $1 ]; then
		echo "Please supply a date"
	else
		git shortlog --all --after="$1 00:00" --before="$1 23:59" --author="Dean Harris" --no-merges
	fi
}

function search() {

    if [ -z $1 ]; then
        echo "Please supply a search pattern"
    else
        grep -rl $1 .
    fi
}

function mux() {
	if [ -z $1 ]; then
	    session=""
	else
	    session="-s $1"
	fi

	# Create new session named "Work"
	tmux new-session -d $session

	# Pane 0
	# Select the pane
	tmux selectp -t 0
	# Split the pane into two horizontal panes
	tmux splitp -v

	# Re-select pane 0
	tmux selectp -t 0

	# Attach the session
	tmux attach
}

function upstart() {
	if [ ! -z $1 ]; then
		git clone --depth=1 --branch=master git@github.com:deanacus/upstart-webpack.git $1
		cd $1
		rm -rf .git
		npm i &> /dev/null
	else
		echo "Pass a project folder to create"
	fi
}

function react() {
	if [ ! -z $1 ]; then
		git clone --depth=1 --branch=master git@github.com:deanacus/react-boilerplate.git $1
		cd $1
		rm -rf .git
		npm i &> /dev/null
	else
		echo "Pass a project folder to create"
	fi
}